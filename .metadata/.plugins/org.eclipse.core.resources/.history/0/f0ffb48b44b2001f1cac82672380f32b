/* Fondo del contenedor principal */
.root-pane {
    -fx-background-color: linear-gradient(to bottom, #e8f5e9, #a5d6a7); /* Gradiente de verde claro */
    -fx-alignment: center; /* Alineación de los hijos en el centro */
}

/* Estilo del texto del logo */
.logo-text {
    -fx-font-family: "Arial";
    -fx-font-size: 60px;
    -fx-fill: #388e3c; /* Verde bosque */
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0, 3); /* Sombra sutil */
}

/* Estilo del botón */
.start-button {
	-fx-margin:0 auto;
    -fx-font-size: 18px;
    -fx-background-color: #81c784; /* Verde menta */
    -fx-text-fill: white;
    -fx-padding: 10 20;
    -fx-background-radius: 8; /* Bordes redondeados */
    -fx-border-radius: 8;
    -fx-border-color: #66bb6a;
    -fx-cursor: hand;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 5, 0.3, 0, 2);
}

/* Hover del botón */
.start-button:hover {
    -fx-background-color: #66bb6a; /* Verde más oscuro */
}

/* Estilo al hacer clic */
.start-button:pressed {
    -fx-background-color: #4caf50;
}

