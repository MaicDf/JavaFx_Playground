package application;
	
import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.StackPane;
import javafx.stage.Stage;
/*requires stages require scenes inside*/
public class Main extends Application {

    @Override
    public void start(Stage primaryStage) {
        // Crear un botón
        Button btn = new Button("New Game");
        btn.setOnAction(e -> System.out.println("¡Iniciando el juego!"));
        

        // Crear un layout
        StackPane root = new StackPane();
        root.getChildren().add(btn);

        // Crear una escena
        Scene scene = new Scene(root, 400, 300);

        // Configurar la ventana principal
        primaryStage.setTitle("New Game Screen");
        primaryStage.setScene(scene);
        primaryStage.show(); //important at the end
    }

    public static void main(String[] args) {
        launch(args); /*calls for the start method behind scenes*/
    }
}